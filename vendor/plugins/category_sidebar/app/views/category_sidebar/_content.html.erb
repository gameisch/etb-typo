<% unless sidebar.categories.blank? -%>
<h3><%= _("Categories")%></h3>
<ul id="categories">
<% for category in sidebar.categories -%>
  <% unless sidebar.empty.blank? and category.article_counter == 0 %>
  <% counter = sidebar.count ? "<em>(#{category.article_counter})</em>" : "" %>
  <li><%= link_to h("#{category.name} #{counter}".html_safe), category_url(category)  %></li>
  <% end %>
<% end -%>
</ul>
<% end %>
